<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-gray-700 mb-4"><%= t('sessions.new.title') %></h2>

  <%= form_with url: login_path, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email, t('sessions.new.email'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div>
      <%= form.label :password, t('sessions.new.password'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>

    <div>
      <%= form.submit t('sessions.new.submit'), class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition" %>
    </div>
  <% end %>
</div>
